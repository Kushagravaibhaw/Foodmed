<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pharmacyentry">

    <Button
        android:id="@+id/orders2"
        android:layout_width="132dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/white"
        android:text="Order"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />

    <Button
        android:id="@+id/proceed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Add pharmacies"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="405dp"
        android:layout_height="402dp"
        android:fontFamily="serif"
        android:text="1.In Hotel ID field Always Enter The ID Given By Government          \n2.You Can Enter Any Five Items\n3.You Should Enter Price Of Each Item Next To The Item           \n4.Before Pressing The Add Button Always Cross Check the Information Given By You\n5.You Can Not Edit Your Information\n6.To Edit Your Information Remove Your Hotel Using Remove Button And Then Add It Again.To Remove Just Enter Your ID "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#EFF0F4"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.355" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="277dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Instructions\n"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#EFF0F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />
</androidx.constraintlayout.widget.ConstraintLayout>